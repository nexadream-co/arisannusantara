{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Production APK",
            "type": "shell",
            "command": "flutter build apk --release --split-per-abi",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Build Runner: Watch",
            "type": "shell",
            "command": "dart run build_runner watch -d",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
    ]
}